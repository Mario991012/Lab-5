@model IEnumerable<Unidad_5_Lab.Models.Estampilla>

@{
    ViewBag.Title = "MostrarListas";
}

<h2>Listas de Estampillas de @ViewBag.Nombre</h2>

<table class="table table-hover">
    <tr class="table-light">
        <th>Opciones</th>
        <th></th>
        <th></th>
    </tr>


    <tr class="table-dark">
        <td>
            @Html.ActionLink("Faltantes", "MostrarListaEscogida", new { lista = 1 })
        </td>
        <td>
            @Html.ActionLink("Colecionadas", "MostrarListaEscogida", new { lista = 2 })
        </td>
        <td>
            @Html.ActionLink("Disponibles", "MostrarListaEscogida", new { lista = 3 })
        </td>
    </tr>


</table>
<table class="table table-hover">
    <tr class="table-light">
        <th>
            @Html.DisplayNameFor(model => model.numero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.obtenida)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="table-dark">
            <td>
                @Html.DisplayFor(modelItem => item.numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.obtenida)
            </td>
        </tr>
    }

</table>