@{
    ViewBag.Title = "Carga de archivo";
}

<div class="jumbotron">
    <h1 class="display-3">Carga del archivo</h1>
    <p class="lead">Carga la informacion del album que tienes</p>
    <hr class="my-4">
    <p class="lead">
        @using (Html.BeginForm("Upload", "Informacion", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <p>Sube el archivo</p>
            <input type="file"  name="file" />
            <hr />
            <input type="submit" value="Subir" class="btn btn-outline-success" />
        }
    </p>
    <h6>@ViewBag.Msg</h6>
</div>

